    <script>
        // Handle auth modal tabs
        document.getElementById('loginTab').addEventListener('click', function(e) {
            e.preventDefault();
            document.getElementById('registerForm').classList.add('hidden');
            document.getElementById('loginForm').classList.remove('hidden');
            document.getElementById('loginTab').classList.remove('border-transparent', 'text-gray-500', 'hover:text-gray-700');
            document.getElementById('loginTab').classList.add('border-blue-500', 'text-blue-600');
            document.getElementById('registerTab').classList.remove('border-blue-500', 'text-blue-600');
            document.getElementById('registerTab').classList.add('border-transparent', 'text-gray-500', 'hover:text-gray-700');
        });
        
        document.getElementById('registerTab').addEventListener('click', function(e) {
            e.preventDefault();
            document.getElementById('loginForm').classList.add('hidden');
            document.getElementById('registerForm').classList.remove('hidden');
            document.getElementById('registerTab').classList.remove('border-transparent', 'text-gray-500', 'hover:text-gray-700');
            document.getElementById('registerTab').classList.add('border-blue-500', 'text-blue-600');
            document.getElementById('loginTab').classList.remove('border-blue-500', 'text-blue-600');
            document.getElementById('loginTab').classList.add('border-transparent', 'text-gray-500', 'hover:text-gray-700');
        });
        
        // Handle modal close buttons
        document.getElementById('closeModal').addEventListener('click', function() {
            document.getElementById('postModal').classList.add('hidden');
        });
        
        document.getElementById('closeAuthModal').addEventListener('click', function() {
            document.getElementById('authModal').classList.add('hidden');
        });
        
        // Simulate clicking on a blog post to show the modal (for demo purposes)
        document.addEventListener('DOMContentLoaded', function() {
            // Add click handlers to blog post "Read more" links
            const readMoreLinks = document.querySelectorAll('a[href="#"]'); 
            readMoreLinks.forEach(link => {
                if (link.textContent.includes('Read more')) {
                    link.addEventListener('click', function(e) {
                        e.preventDefault();
                        document.getElementById('postModal').classList.remove('hidden');
                    });
                }
            });
            
            // If there's a "Get Started" button, show auth modal
            const getStartedBtns = document.querySelectorAll('button');
            getStartedBtns.forEach(btn => {
                if (btn.textContent.includes('Get Started')) {
                    btn.addEventListener('click', function() {
                        document.getElementById('authModal').classList.remove('hidden');
                    });
                }
            });
            
            // Handle cancel/save buttons in post modal
            document.getElementById('cancelPost').addEventListener('click', function() {
                document.getElementById('postModal').classList.add('hidden');
            });
            
            document.getElementById('savePost').addEventListener('click', function() {
                // In a real app, this would save changes
                alert('Changes saved!');
                document.getElementById('postModal').classList.add('hidden');
            });
        });
    </script>
